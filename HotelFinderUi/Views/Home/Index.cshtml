@model IEnumerable<HotelFinderUi.Models.Hostel>
@{
    ViewData["Title"] = "Home Page";
}
<a href="/Home/Create" class="btn btn-success">Hotel Ekle</a>
<table class="table table-primary">
    <thead>
        <tr class="table table-info">
            <th>ID </th>
            <th>Hotel Ad </th>
            <th>Şehir </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.City</td>
                <td> <a href="/Home/Details/@item.Id" class="btn btn-primary">Detay</a></td>
                <td> <a href="/Home/Edit/@item.Id" class="btn btn-warning">Güncelle</a></td>
                <td> <a href="/Home/Delete/@item.Id" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </tbody>
</table>
